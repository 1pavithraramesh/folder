<!DOCTYPE html>
<html>
<head>
    <title>Style Calculator</title>
</head>
<body>
    <h1>Style Calculator</h1>
    
    <label for="backgroundColorInput">Background Color:</label>
    <input type="text" id="backgroundColorInput" placeholder="Enter a color">
    
    <div id="output" style="width: 200px; height: 200px; background-color: white;"></div>
    
    <script>
        const backgroundColorInput = document.getElementById("backgroundColorInput");
        const output = document.getElementById("output");
        
        backgroundColorInput.addEventListener("input", () => {
            const backgroundColor = backgroundColorInput.value;
            output.style.backgroundColor = backgroundColor;
        });
    </script>
</body>
</html>
